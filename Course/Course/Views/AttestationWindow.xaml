<Window x:Class="Course.Views.AttestationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AttestationWindow" Padding="250,250,250,250">

    <Window.Background>
        <ImageBrush ImageSource="e:\4 семестр\c#\Курсовой проект\search.jpg" Stretch="UniformToFill" TileMode="None" />
    </Window.Background>
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>



        <Menu>
            <MenuItem Header="{DynamicResource m_Save}" StaysOpenOnClick="True">
                <MenuItem Header="{DynamicResource m_Save}" Command="{Binding SaveCommand}"></MenuItem>
                <MenuItem Header="{DynamicResource m_SaveAs}"></MenuItem>
            </MenuItem>
            <MenuItem Header="{DynamicResource m_Search}" StaysOpenOnClick="True">
                <MenuItem  Header="{DynamicResource m_Students}"></MenuItem>
                <MenuItem Command="{Binding SearchTeachersCommand}" Header="{DynamicResource m_Teachers}"></MenuItem>
            </MenuItem>
        </Menu>


        <StackPanel HorizontalAlignment="Left" Height="275" Margin="10,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="255">
            <Label Content="Факультет" HorizontalAlignment="Left" Margin="20,10,0,0" VerticalAlignment="Top" Height="29" Grid.Row="1" Width="Auto"/>
            <TextBox Text="{Binding StudentFaculty, Mode=TwoWay}" HorizontalAlignment="Left" Height="Auto" Margin="90,-25,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <Label Content="Курс" HorizontalAlignment="Left" Margin="18,15,0,0" VerticalAlignment="Top" Height="29" Grid.Row="1" Width="Auto"/>

            <TextBox Text="{Binding StudentCourse, Mode=TwoWay}" HorizontalAlignment="Left" Height="Auto" Margin="90,-25,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <TextBox Text="{Binding StudentGroup, Mode=TwoWay}" Height="23"  Margin="90,15,45,0"/>
            <Label Content="Группа" HorizontalAlignment="Left" Margin="18,-25,0,0" VerticalAlignment="Top" Height="29" Width="Auto"/>
            <Button Content="Поиск" Command="{Binding BeginAttCommand}" Margin="-60,15,0,0" Width="80" Height="25"/>
            <Button Content="Очистить" Command="{Binding ClearCommand}" Margin="110,-25,0,0" Width="80" Height="25"/>


        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="Auto"   Margin="270,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="Auto">
            <DataGrid AutoGenerateColumns="True" ItemsSource="{Binding mainlist}" HorizontalAlignment="Left" Margin="20,10,0,0" Grid.Row="1" VerticalAlignment="Top" Height="Auto" Width="Auto"/>
        </StackPanel>
        <Button Content="Вернуться" Command="{Binding BackCommand}" HorizontalAlignment="Left" Margin="10,0,0,-400" Grid.Row="1" Width="150" Height="50"/>
    </Grid>
</Window>
